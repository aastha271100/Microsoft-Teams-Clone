 <!-- ejs templating is <%=roomId %>-->

<!DOCTYPE html>
<html lang="en">
  <head>
     
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teams -Video Chat</title>
    <link rel="stylesheet" href="style.css" />            <!-- import style.css-->
    
    <!-- import socket io here-->
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>

    <!-- import peerjs here-->
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="header">
      <class class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <div class="logo_content">

          <div class="options__button">
            <i class="fa-lg fab fa-microsoft"></i>
          </div>

          <div class="logo_text_box">
            <div class="logo_text">
              <h3>MICROSOFT TEAMS</h3>
            </div>
            
          </div>

        </div>
      </div>
      
        <!-- <h3>Microsoft Teams</h3>
      </div>
    </div>   -->
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">                   <!-- create a video grid where the video is going to live--> 

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
          <div id="showChat" class="options__button">
            <i class="fa fa-comment"></i>
          </div>
          <div id="shareScreen" class="options__button">
            <i class="fas fa-photo-video"></i>
          </div>
        </div>
        <div class="options__right">
          <div id="inviteButton" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window">         <!-- wil contain all chat messages --> 
          <div class="messages">

          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here">
        <div id="send" class="options__button">
          <i class="fa fa-paper-plane" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="script.js"></script>                 <!-- import script.js inside our html-->
</html>